{
  "name": "thewebsolver/cli",
  "description": "CLI for TheWebSolver libraries",
  "type": "library",
  "license": "GPL-3.0-or-later",
  "authors": [
    {
      "name": "Shesh Ghimire",
      "email": "sheshgh@outlook.com"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": ">=8.2",
    "symfony/console": "^7.2",
    "symfony/event-dispatcher": "^7.2",
    "thewebsolver/code-generator": "dev-master",
    "thewebsolver/container": "dev-main"
  },
  "autoload": {
    "psr-4": {
      "TheWebSolver\\Codegarage\\Cli\\": "Src/"
    },
    "files": [
      "bootstrap.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "TheWebSolver\\Codegarage\\Test\\": "Tests/"
    }
  },
  "repositories": [
    {
      "type": "path",
      "url": "../code-generator",
      "options": {
        "symlink": false
      }
    },
    {
      "type": "path",
      "url": "../container"
    }
  ],
  "scripts": {
    "test:unit": "vendor/bin/phpunit",
    "analyze": "vendor/bin/phpstan analyze",
    "sniff": "vendor/bin/phpcs",
    "test": [
      "@test:unit",
      "@analyze"
    ]
  },
  "require-dev": {
    "phpunit/phpunit": "^11.5",
    "phpstan/phpstan": "^2.1"
  }
}
