{
  "name": "thewebsolver/cli",
  "description": "CLI for TheWebSolver libraries",
  "type": "library",
  "license": "GPL-3.0-or-later",
  "authors": [
    {
      "name": "Shesh Ghimire",
      "email": "sheshgh@outlook.com"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": ">=8.2",
    "symfony/console": "^7.2",
    "symfony/event-dispatcher": "^7.2",
    "thewebsolver/container": "dev-main"
  },
  "suggest": {
    "thewebsolver/code-generator": "Allows generation of complied (cache) data for Container auto-wiring"
  },
  "autoload": {
    "psr-4": {
      "TheWebSolver\\Codegarage\\Cli\\": "Src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "TheWebSolver\\Codegarage\\Test\\": "Tests/"
    }
  },
  "scripts": {
    "test:unit": "vendor/bin/phpunit",
    "analyze": "vendor/bin/phpstan",
    "sniff": "vendor/bin/phpcs",
    "test": [
      "@analyze",
      "@test:unit",
      "@sniff"
    ],
    "update:dev": [
      "@putenv COMPOSER=composer.dev.json",
      "@composer update:packages"
    ],
    "test:dev": [
      "phpstan",
      "phpunit"
    ]
  },
  "require-dev": {
    "phpunit/phpunit": "^11.5",
    "phpstan/phpstan": "^2.1",
    "squizlabs/php_codesniffer": "^3.11",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "wp-coding-standards/wpcs": "^3.1"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
